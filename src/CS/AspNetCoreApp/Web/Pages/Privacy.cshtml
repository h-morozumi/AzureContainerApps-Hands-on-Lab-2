@page
@model PrivacyModel
@{
    ViewData["Title"] = "Dapr Demo";
}
<h1>@ViewData["Title"]</h1>

<div class="col-md-4">
    <div class="form-item">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Message Count:</label>
                <input type="text" class="form-control" id="messageCount" name="messageCount" required />
            </div>

            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>

    <div class="result">
        <p>@Model.Message</p>
    </div>
</div>
